<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sectionHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/regularMargin</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="regularText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/regularMargin</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
        <item name="android:textColor">@color/regularText</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
    </style>

    <style name="regularCheckbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
    </style>

    <style name="counterButton">
        <item name="android:layout_width">@dimen/counterButtonSize</item>
        <item name="android:layout_height">@dimen/counterButtonSize</item>
    </style>

    <style name="tightButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/regularMargin</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
        <item name="android:paddingLeft">@dimen/regularButtonPadding</item>
        <item name="android:paddingRight">@dimen/regularButtonPadding</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
    </style>

    <style name="wideButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/regularMargin</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/regularMargin</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
    </style>

</resources>
